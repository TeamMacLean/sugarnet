<div ng-app="rotool" ng-controller="checkController" id="checkController">

    <div class="stepOne">

        <div class="container">

            <h1>Upload your CSV file</h1>

            <input type="file" file-input="files" class="center-block">
            <button ng-click="upload()" class="btn btn-default center-block">Upload</button>

        </div>
    </div>

    <div class="stepTwo">
        <div class="container">
            <h1>Treatments</h1>

            <form ng-submit="addTreatment(header)">
                <input type="text" ng-model="header" class="center-block">
                <button class="btn btn-default center-block">add treatment</button>
            </form>

            <div ng-repeat="treatment in treatments" id="treatmentList">
                <div class="non-btn">
                    <button type="button" ng-click="removeTreatment(treatment)" class="close">
                        <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                    {{treatment}}
                </div>
            </div>
        </div>
    </div>

    <div class="stepThree">
        <div class="container">

            <h1>Explain the data</h1>

            <div ng-repeat="header in headers" id="headerList">
                <p>{{header}} <select ng-model="define" ng-options="d as d for d in defineOptions"></select></p>

            </div>

            <button class="btn btn-default center-block">Submit</button>

        </div>
    </div>

</div>